<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">    <!-- Handle Bar -->
    <View
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_handle_bar"
        android:backgroundTint="#BDBDBD" />    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_rounded"
        android:backgroundTint="@color/blue"
        android:padding="28dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical"
        android:elevation="6dp"
        android:translationZ="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Plat Nomor"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan nomor plat kendaraan Anda"
            android:textColor="#E8F0FF"
            android:textSize="16sp"
            android:gravity="center"
            android:alpha="0.9" />

    </LinearLayout>    <!-- License Plate Input Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Nomor Plat Kendaraan"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <!-- License Plate Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp">            <!-- First Column - 2 Letters -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginEnd="12dp"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/blue"
                app:boxBackgroundColor="#F8FAFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="3dp"
                app:hintEnabled="false"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPlatHuruf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AB"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9E9E9E"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:letterSpacing="0.1"
                    android:imeOptions="actionNext"
                    android:elevation="2dp" />

            </com.google.android.material.textfield.TextInputLayout>            <!-- Second Column - 4 Numbers -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/blue"
                app:boxBackgroundColor="#F8FAFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="3dp"
                app:hintEnabled="false"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPlatAngka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1234"
                    android:inputType="number"
                    android:maxLength="4"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9E9E9E"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:letterSpacing="0.15"
                    android:imeOptions="actionNext"
                    android:elevation="2dp" />

            </com.google.android.material.textfield.TextInputLayout>            <!-- Third Column - 3 Letters -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginStart="12dp"
                app:boxBackgroundMode="filled"                
                app:boxStrokeColor="@color/blue"
                app:boxBackgroundColor="#F8FAFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="3dp"
                app:hintEnabled="false"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPlatHuruf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="XYZ"
                    android:inputType="textCapCharacters"
                    android:maxLength="3"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9E9E9E"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:letterSpacing="0.1"
                    android:imeOptions="actionDone"
                    android:elevation="2dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>    <!-- Multiple Vehicle Button -->
    <TextView
        android:id="@+id/btnBanyakKendaraan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:text="Kendaraan Lebih dari 1?"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:text="Simpan"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/blue"
        app:cornerRadius="16dp"
        app:elevation="4dp" />

</LinearLayout>