<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D59F4"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_white"
                android:scaleType="center"
                android:src="@drawable/ic_back_arrow"
                android:tint="#3D59F4" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnBack"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/btnBack"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Kolam"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form kolam yang akan dijadikan informasi kolam"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </RelativeLayout>

        <!-- Card -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <!-- Foto -->
                <ImageView
                    android:id="@+id/imageKolam"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_image_border"
                    android:padding="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_placeholder" />

                <Button
                    android:id="@+id/btnPilihFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#3D59F4"
                    android:text="Pilih Foto"
                    android:textColor="@android:color/white" />

                <!-- Nama Kolam -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Nama Kolam"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editNama"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Masukkan nama kolam"
                    android:paddingHorizontal="16dp" />

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="Deskripsi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Masukkan deskripsi kolam"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp" />

                <!-- Kedalaman & Luas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kedalaman"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/editKedalaman"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:hint="Meter"
                            android:inputType="number"
                            android:paddingHorizontal="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luas"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/editLuas"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:hint="mÂ²"
                            android:inputType="number"
                            android:paddingHorizontal="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tombol Simpan -->
                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Simpan"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#4CAF50" />

                <!-- Tombol Hapus -->
                <Button
                    android:id="@+id/btnHapus"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Hapus"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E91E63" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
