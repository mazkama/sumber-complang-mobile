<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardKolamAnak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/transparent"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_gradient_blue"
        android:padding="16dp">

        <!-- Label Kolam -->
        <TextView
            android:id="@+id/tvKategoriTiket"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_label_tiket"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:paddingTop="5dp"
            android:text="Kolam"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Judul Tiket -->
        <TextView
            android:id="@+id/tvNamaTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvKategoriTiket"
            android:layout_marginTop="20dp"
            android:text="Tiket Kolam Anak"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Deskripsi Tiket -->
        <TextView
            android:id="@+id/tvDesTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNamaTiket"
            android:layout_alignStart="@+id/tvNamaTiket"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/tvHargaTiket"
            android:text="Tiket masuk yang digunakan untuk anak anak"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- Harga -->
        <TextView
            android:id="@+id/tvHargaTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Rp 15.000"
            android:textAlignment="center"
            android:textColor="#FCFEFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnKurang"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_label_tiket"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#0380FD"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnTambah"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_label_tiket"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#0380FD"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
