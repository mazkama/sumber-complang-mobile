<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D59F4"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_white"
                android:scaleType="center"
                android:src="@drawable/ic_back_arrow"
                android:tint="@color/blue" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnBack"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/btnBack"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Tiket"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form tiket yang akan dijadikan informasi tiket"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </RelativeLayout>

        <!-- Card -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardKolamAnak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:backgroundTint="@android:color/transparent"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/bg_gradient_blue"
                        android:padding="16dp">

                        <!-- Label Kolam -->
                        <TextView
                            android:id="@+id/tvKategoriTiket"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_label_tiket"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:paddingTop="5dp"
                            android:text="Kolam"
                            android:textAlignment="center"
                            android:textColor="@color/blue"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Judul Tiket -->
                        <TextView
                            android:id="@+id/tvNamaTiket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvKategoriTiket"
                            android:layout_marginTop="20dp"
                            android:text="Tiket Kolam Anak"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Deskripsi Tiket -->
                        <TextView
                            android:id="@+id/tvDesTiket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvNamaTiket"
                            android:layout_alignStart="@+id/tvNamaTiket"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="20dp"
                            android:layout_toStartOf="@+id/tvHargaTiket"
                            android:text="Tiket masuk yang digunakan untuk anak anak"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <!-- Harga -->
                        <TextView
                            android:id="@+id/tvHargaTiket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/bg_label_tiket"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Rp 15.000"
                            android:textAlignment="center"
                            android:textColor="#007AFF"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Nama tiket Kolam -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Nama Tiket Kolam"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editNama"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Masukkan nama tiket kolam"
                    android:paddingHorizontal="16dp" />

                <!-- Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="Deskripsi"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Masukkan deskripsi tiket kolam"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp" />

                <!-- harga & kategori -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/editHarga"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:hint="Rp."
                            android:inputType="number"
                            android:paddingHorizontal="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kategori"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/editKetegori"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:hint="Kategori"
                            android:inputType="number"
                            android:paddingHorizontal="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tombol Simpan -->
                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Simpan"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#4CAF50" />

                <!-- Tombol Hapus -->
                <Button
                    android:id="@+id/btnHapus"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Hapus"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E91E63" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
