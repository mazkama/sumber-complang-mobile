<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D59F4"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_white"
                android:scaleType="center"
                android:src="@drawable/ic_back_arrow"
                android:tint="@color/blue" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnBack"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/btnBack"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Tiket"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pindai ke kode QR untuk memvalidasi"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </RelativeLayout>

        <!-- Camera Preview Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Camera Preview -->
            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Semi-transparent dark background dengan cutout untuk scan area -->
            <!-- Ganti dengan 4 view terpisah sebagai frame hitam transparansi dengan area scan transparan -->

            <!-- Top dark overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/scanAreaPlaceholder"
                android:background="#99000000" />

            <!-- Bottom dark overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scanAreaPlaceholder"
                android:background="#99000000" />

            <!-- Left dark overlay -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignTop="@+id/scanAreaPlaceholder"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/scanAreaPlaceholder"
                android:background="#99000000" />

            <!-- Right dark overlay -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignTop="@+id/scanAreaPlaceholder"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/scanAreaPlaceholder"
                android:background="#99000000" />

            <!-- Placeholder untuk posisi scan area -->
            <View
                android:id="@+id/scanAreaPlaceholder"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent" />

            <!-- Scan Area Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <!-- Transparent Center Square for QR -->
                <View
                    android:id="@+id/scanArea"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_transparent_square" />

                <View
                    android:id="@+id/scanSuccessOverlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#8000FF00"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/scanArea"
                    app:layout_constraintEnd_toEndOf="@id/scanArea"
                    app:layout_constraintStart_toStartOf="@id/scanArea"
                    app:layout_constraintTop_toTopOf="@id/scanArea" />

                <!-- Corner Markers (WhatsApp Style) -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@id/scanArea"
                    android:layout_alignTop="@id/scanArea"
                    android:src="@drawable/qr_corner_top_left" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/scanArea"
                    android:layout_alignEnd="@id/scanArea"
                    android:src="@drawable/qr_corner_top_right" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@id/scanArea"
                    android:layout_alignBottom="@id/scanArea"
                    android:src="@drawable/qr_corner_bottom_left" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@id/scanArea"
                    android:layout_alignBottom="@id/scanArea"
                    android:src="@drawable/qr_corner_bottom_right" />

                <!-- Scan Line Animation -->
                <View
                    android:id="@+id/scanLine"
                    android:layout_width="230dp"
                    android:layout_height="2dp"
                    android:layout_alignStart="@id/scanArea"
                    android:layout_alignTop="@id/scanArea"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF" />

                <!-- Instruction Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/scanArea"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Posisikan kode QR di dalam kotak"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />                <!-- Button Container for side by side alignment -->
                <LinearLayout
                    android:id="@+id/buttonContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/scanArea"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Flash Button with Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btnFlash"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_white_transparent"
                            android:padding="12dp"
                            android:src="@drawable/ic_flashlighton_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Flash"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Second Button with Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btnPembelian"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_white_transparent"
                            android:padding="12dp"
                            android:src="@drawable/ic_ticket_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pembelian"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>